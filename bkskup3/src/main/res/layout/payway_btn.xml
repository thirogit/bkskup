<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal"
                  style="@style/SegmentedButtonContainer"

            >

        <com.bk.bkskup3.widgets.ToggleButton
            android:id="@+id/cash_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/payWayCash"
                style="@style/SegmentedButton"
                android:background="@drawable/btn_payway_cash"
                />

        <com.bk.bkskup3.widgets.ToggleButton
            android:id="@+id/transfer_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/payWayTransfer"
                style="@style/SegmentedButton"
                android:background="@drawable/btn_payway_transfer"
                />

    </LinearLayout>

</merge>