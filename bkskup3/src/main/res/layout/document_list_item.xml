<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:id="@+id/documentListItem"
                                             android:layout_width="fill_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="horizontal"
                                             android:gravity="center_vertical"
                                             android:minHeight="@dimen/list_row_height"
        >

    <TextView android:id="@+id/hasProfilesInd"
        android:layout_width="@dimen/list_row_height"
        android:layout_height="@dimen/list_row_height" />

    <TextView
            android:id="@+id/documentName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical|left"
            style="@style/list_cell"
            />


</LinearLayout>

