<?xml version="1.0" encoding="utf-8"?>

<com.bk.layout.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="40dp"
        android:background="@drawable/checkable_background_red"
        android:gravity="center_horizontal|center_vertical">

    <TextView
            android:id="@+id/cowNo"
            android:layout_width="0dp"
            android:layout_weight="0.35"
            style="@style/list_cell"
            />

    <View android:id="@+id/divider1"
          android:background="@drawable/white_divider"
          android:layout_width="1dp"
          android:layout_height="fill_parent"/>

    <TextView
            android:id="@+id/cowWeight"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            style="@style/list_cell"
            />

    <View android:id="@+id/divider2"
          android:background="@drawable/white_divider"
          android:layout_width="1dp"
          android:layout_height="fill_parent"/>

    <TextView
            android:id="@+id/cowClassCd"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            style="@style/list_cell"
            />

    <View android:id="@+id/divider3"
          android:background="@drawable/white_divider"
          android:layout_width="1dp"
          android:layout_height="fill_parent"/>

    <TextView
            android:id="@+id/cowNetPricePerKg"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            style="@style/list_cell"
            />

    <View android:id="@+id/divider4"
          android:background="@drawable/white_divider"
          android:layout_width="1dp"
          android:layout_height="fill_parent"/>

    <TextView
            android:id="@+id/cowNetPrice"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            style="@style/list_cell"
            />


</com.bk.layout.CheckableLinearLayout>



