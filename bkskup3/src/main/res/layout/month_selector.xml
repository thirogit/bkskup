<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="?android:attr/actionBarSize"
              style="?android:actionBarStyle"
              android:divider="?android:attr/actionBarDivider"
              android:dividerPadding="12dip"
              android:weightSum="1"
              android:showDividers="middle"
              android:gravity="center_vertical">

    <ImageView android:id="@+id/prevMonth"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/prev"
            style="?android:attr/actionMenuTextAppearance"/>

    <TextView android:id="@+id/currentMonth"
              android:layout_width="0dp"
              android:layout_height="fill_parent"
              android:layout_weight="1"
              android:gravity="center_horizontal|center_vertical"
              android:textSize="20sp"
              android:background="?android:attr/actionBarItemBackground"
              android:text="mmm-YYYY"
            style="?android:attr/actionButtonStyle"/>

    <ImageView android:id="@+id/nextMonth"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/next"/>

</LinearLayout>