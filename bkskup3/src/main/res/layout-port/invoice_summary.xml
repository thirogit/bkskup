<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/summary"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#FFF"
                  android:orientation="vertical"
            >


        <LinearLayout android:id="@+id/summaryTitle"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                >


            <TextView android:id="@+id/summaryInvoiceTypeTitle"
                      android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:layout_height="wrap_content"
                      style="@style/summary_item_title"
                      android:text="@string/summaryTitleInvoiceType"
                    />

            <TextView android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:layout_height="wrap_content"
                      style="@style/summary_item_title"
                      android:background="@color/darker_green"
                      android:text="@string/summaryTitleVatRate"
                    />

            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:text="@string/cowAmountLblCaption"
                      android:background="@color/cowAmount"
                      style="@style/summary_item_title"/>

            <TextView android:layout_width="0dp"
                      android:layout_weight="1.5"
                      android:layout_height="wrap_content"
                      android:text="@string/summaryTitleTotalNet"
                      android:background="@color/netPrice"
                      style="@style/summary_item_title"/>

            <TextView android:layout_width="0dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content"
                      android:text="@string/summaryTitleTotalGross"
                      android:background="@color/grossPrice"
                      style="@style/summary_item_title"/>

        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">


            <TextView android:id="@+id/summaryInvoiceType"
                      android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:background="#FFF"
                      style="@style/summary_item_value"
                    />

            <TextView android:id="@+id/summaryVatRate"
                      android:layout_width="0dp"
                      android:layout_weight="0.5"
                      android:layout_height="wrap_content"
                      android:textColor="#000"
                      android:background="@color/darker_green"
                      style="@style/summary_item_value"
                    />

            <TextView android:id="@+id/summaryCowAmount"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:background="@color/cowAmount"
                      style="@style/summary_item_value"/>

            <TextView android:id="@+id/summaryNetTotal"
                      android:layout_width="0dp"
                      android:layout_weight="1.5"
                      android:layout_height="wrap_content"
                      android:background="@color/netPrice"
                      style="@style/summary_item_value"/>

            <TextView android:id="@+id/summaryGrossTotal"
                      android:layout_width="0dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content"
                      android:background="@color/grossPrice"
                      style="@style/summary_item_value"/>
        </LinearLayout>

    </LinearLayout>
</merge>