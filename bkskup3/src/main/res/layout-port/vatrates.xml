<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/widget56"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        >

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      >

            <TextView android:id="@+id/TextView01"
                      android:layout_width="fill_parent"
                      android:text="@string/regInvVatRateLblCaption"
                      style="@style/label"/>


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical">

                <EditText android:id="@+id/regInvVatRateEditBox"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.8"
                          android:inputType="numberDecimal"
                          android:hint="@string/hintRegularInvVatRate"
                          style="@style/input"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical"
                        style="@style/SegmentedButtonContainer"
                        >

                    <Button android:id="@+id/regInvVatRatePlusBtn"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:text="+"
                            style="@style/SegmentedButton"
                            />

                    <Button android:id="@+id/regInvVatRateMinusBtn"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:text="-"
                            style="@style/SegmentedButton"
                            />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:id="@+id/TextView05"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/lumpInvVatRateLblCaption"
                      style="@style/label"/>


            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center_vertical">

                <EditText android:id="@+id/lumpInvVatRateEditBox"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.8"
                          android:inputType="numberDecimal"
                          android:hint="@string/hintLumpInvVatRate"
                          style="@style/input"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical"
                        style="@style/SegmentedButtonContainer"
                        >

                    <Button android:id="@+id/lumpInvVatRatePlusBtn"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:text="+"
                            style="@style/SegmentedButton"
                            />

                    <Button android:id="@+id/lumpInvVatRateMinusBtn"
                            android:layout_width="0dp" android:layout_height="wrap_content"
                            android:layout_weight="1" android:text="-"
                            style="@style/SegmentedButton"
                            />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>

