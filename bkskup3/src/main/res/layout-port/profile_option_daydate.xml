<?xml version="1.0" encoding="utf-8"?>
<com.bk.bkskup3.management.widget.DocumentDayDateOptionView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:saveEnabled="false">

    <TextView
        android:id="@+id/optionTitle"
        style="@style/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        android:text="_option_label_" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/optionValueBox"
            style="@style/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:saveEnabled="false"
            android:layout_toLeftOf="@id/changeDateBtn"/>

        <ImageButton
            android:id="@+id/changeDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_calendar_today"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</com.bk.bkskup3.management.widget.DocumentDayDateOptionView>