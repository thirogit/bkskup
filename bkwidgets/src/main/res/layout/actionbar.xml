<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/actionbar_background"
    >

    <ImageView android:id="@+id/actionbar_icon"
               android:paddingLeft="3dip"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:visibility="gone"
               android:layout_alignParentLeft="true"
               />

    <LinearLayout
            android:id="@+id/actionbar_actions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@color/actionbar_separator"
            android:orientation="horizontal"
            />


    <com.bk.widgets.actionbar.ScrollingTextView
            android:id="@+id/actionbar_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actionbar_icon"
            android:layout_toLeftOf="@id/actionbar_actions"
            android:layout_centerVertical="true"
            android:paddingLeft="3dip"
            android:paddingRight="10dip"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/actionbar_title"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:background="@android:color/transparent"
            />





    </RelativeLayout>
